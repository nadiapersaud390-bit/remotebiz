    <script>
        const SHEET_API_URL = "YOUR_GOOGLE_SCRIPT_WEB_APP_URL";

        const levels = [
            { min: 20, icon: "fa-bolt", color: "text-red-500", glow: "border-red-600", label: "Level 5" },
            { min: 11, icon: "fa-crown", color: "text-yellow-500", glow: "master-glow", label: "Level 4" },
            { min: 7, icon: "fa-fire", color: "text-orange-500", glow: "border-orange-500", label: "Level 3" },
            { min: 4, icon: "fa-sword", color: "text-blue-500", glow: "pro-glow", label: "Level 2" },
            { min: 1, icon: "fa-shield", color: "text-slate-400", glow: "border-slate-600", label: "Level 1" },
            { min: 0, icon: "", color: "text-slate-700", glow: "border-transparent", label: "" }
        ];

        function getLvl(leads) {
            return levels.find(l => leads >= l.min);
        }

        function updateUI(data) {
            if (!data || data.length === 0) return;
            data.sort((a, b) => b.leads - a.leads);

            // 1. Top Section Performer List (Level status)
            const topList = document.getElementById('top-performers');
            topList.innerHTML = data.slice(0, 15).map(agent => {
                const lvl = getLvl(agent.leads);
                return `
                    <div class="agent-row p-3 rounded flex justify-between items-center ${lvl.glow}">
                        <span class="text-sm font-medium text-slate-200">${agent.name}</span>
                        <div class="flex items-center gap-2">
                            ${agent.leads > 0 ? `
                                <div class="bg-red-600 px-2 py-0.5 rounded flex items-center gap-1">
                                    <span class="text-[8px] font-black italic">${lvl.label.split(' ')[1]}</span>
                                    <span class="text-[7px] font-black uppercase">Level</span>
                                </div>
                                <span class="text-[10px] font-light italic text-slate-400">Completed</span>
                            ` : ''}
                        </div>
                    </div>
                `;
            }).join('');

            // 2. Bottom Sections (Columns)
            const columnHtml = data.map(agent => `
                <div class="bg-gray-900/50 px-3 py-2 rounded flex justify-between items-center mb-1 border-b border-white/5">
                    <span class="text-[11px] text-slate-400 font-medium">${agent.name}</span>
                    <span class="text-cyan-400 text-lg font-black italic">${agent.leads || 0}</span>
                </div>
            `).join('');

            document.getElementById('rank-2pm').innerHTML = columnHtml;
            document.getElementById('rank-5pm').innerHTML = columnHtml;
            document.getElementById('rank-8pm').innerHTML = columnHtml;
        }

        async function fetchData() {
            if (!SHEET_API_URL || SHEET_API_URL.includes("YOUR_GOOGLE")) return;
            try {
                const res = await fetch(SHEET_API_URL);
                const data = await res.json();
                updateUI(data);
            } catch (e) { console.error("Sync Error:", e); }
        }

        window.onload = () => {
            fetchData();
            setInterval(fetchData, 60000);
        };
    </script>
